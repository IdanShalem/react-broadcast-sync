    }
  },
  "scripts": {
    "build": "rollup -c rollup.config.mjs",
    "prepare": "npm run build",
    "test": "jest"
  },
  "keywords": [
    "react",
    "hooks",
    "broadcastchannel",
    "sync",
    "cross-tab",
