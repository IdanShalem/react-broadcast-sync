  },
  "bugs": {
    "url": "https://github.com/IdanShalem/react-broadcast-sync/issues"
  },
  "homepage": "https://github.com/IdanShalem/react-broadcast-sync#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
